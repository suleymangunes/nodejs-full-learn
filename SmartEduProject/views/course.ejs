    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-9 blog-post-single">
                    <div class="blog-item">
						<div class="image-blog">
							<img src="/images/blog_single.jpg" alt="" class="img-fluid">
						</div>
						<div class="post-content">

							<% if (user && !(user.courses.includes(course._id))) { %>
							<div class="post-date">
								<form action="/courses/enroll" method="POST">
									<input type="hidden" name="course_id" value="<%= course._id %>">
									<button class="btn btn-lg btn-warning text-white">
										<span>ENROLL</span>
									</button>
								</form>
							</div>
							<% } %>
							
							
							<div class="meta-info-blog">
								<span><i class="fa fa-calendar"></i> <a href="#"><%= course.createdAt %></a> </span>
							</div>
							<div class="blog-title">
								<h2><a href="#" title=""><%= course.name %></a></h2>
							</div>
							<div class="blog-desc">
								<p>Lorem ipsum door sit amet, fugiat deicata avise id cum, no quo maiorum intel ogrets geuiat operts elicata libere avisse id cumlegebat, liber regione eu sit.... </p>
